{
    "manifest_version": 2,
    "name": "Netflix Progress Bar",
    "version": "1.0",
    "permissions": [
        "*://*.netflix.com/*"
    ],
    "icons": {
        "128": "128.png"
    },
    "content_scripts": [
        {
            "matches": [ "*://*.netflix.com/*" ],
            "js": [ "content-script.js"],
            "css": [ "content-script.css"],
            "run_at": "document_idle"
        }
    ]
}